<% content_for :title, "Detail Portofolio" %>
<div class="container mt-5 mb-5">
  <p style="color: green"><%= notice %></p>
  <%= render @portofolio %>
  <% if !session[:user_id].nil? && session[:role] == 1 %>
    <div class="d-flex mt-5">
      <%= link_to "Edit Portofolio", edit_portofolio_path(@portofolio), {class: 'btn btn-custom me-2'} %>
      <%= link_to "List Portofolio", "/portofolios?id_user=#{session[:user_id]}", {class: 'btn btn-secondary me-2'} %>
      <%= button_to "Delete Portofolio", @portofolio, method: :delete, class: "btn btn-danger" %>
    </div>
  <% end %>
</div>
