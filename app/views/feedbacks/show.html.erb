<% content_for :title, "Detail Feedback" %>
<div class="container mt-5 mb-5">
  <p style="color: green"><%= notice %></p>
  <%= render @feedback %>
  <% if !session[:user_id].nil? && session[:role] == 2 %>
    <div class="d-flex mt-5">
      <%= link_to "Edit Feedback", edit_feedback_path(@feedback), {class: 'btn btn-custom me-2'} %>
      <%= link_to "List Feedback", "/feedbacks?id_user=#{session[:user_id]}", {class: 'btn btn-secondary me-2'} %>
      <%= button_to "Delete Feedback", @feedback, method: :delete, class: "btn btn-danger" %>
    </div>
  <% end %>
</div>
