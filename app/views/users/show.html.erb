<% content_for :title, "Info Account" %>
<div class="container mt-5">
  <p style="color: green"><%= notice %></p>
  <h2 class="title-cus mt-sm-5">Your Account</h2>
  <%= render @user %>
  <div class="d-flex mt-5">
    <%= link_to "Back To Profile", current_user, {class: "btn btn-primary me-3"} %>
    <%= link_to "Change Password", edit_user_path(@user), {class: "btn btn-secondary me-3"} %>
    <%= button_to "Delete Account", @user, method: :delete, class: "btn btn-danger" %>
  </div>
</div>
